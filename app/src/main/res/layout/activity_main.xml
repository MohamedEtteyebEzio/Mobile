<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="@drawable/backgr"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_gravity="center"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="300dp">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/top_box"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/archivo"
            android:text="Hi [Name]   "
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/archivo"
            android:text="How are you feeling today ? "
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:textStyle="normal" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="166dp"
        android:layout_marginRight="-2dp"
        android:fontFamily="@font/archivo"
        android:gravity="center"
        android:padding="30dp"
        android:text="@string/nav_bar"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="-70dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/doc_img" />
</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo"
        android:text="Measurement : "
        android:textColor="#000"
        android:textSize="19sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/mLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:fontFamily="@font/archivo"
        android:textSize="19sp"
        android:hint="Measured value (in mmol/l)"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/custumblue"
        android:gravity="center"
        />
    <TextView

        android:id="@+id/tvage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo"
        android:text="@string/Age"
        android:textColor="#000"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />

    <SeekBar
        android:id="@+id/skAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:max="120"
        android:padding="20dp"
        android:backgroundTint="@color/custumblue"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo"
        android:layout_marginTop="30dp"
        android:text="@string/q1"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/black"


        />

    <RadioGroup
        android:id="@+id/Grp"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        >

        <RadioButton
            android:id="@+id/Yes"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/custumblue"
            android:checked="true"
            android:fontFamily="@font/archivo"
            android:text="Yes"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <RadioButton
            android:id="@+id/No"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="@color/custumblue"
            android:fontFamily="@font/archivo"
            android:text="No"
            android:textColor="@color/black"
            android:textSize="19sp"

            />

    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/archivo"
                android:padding="12dp"
                android:text="CONSULT"
                android:textColor="@color/white"
                android:textSize="19sp" />



            <Button
                android:id="@+id/btnlog"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/archivo"
                android:padding="12dp"
                android:text="log out"
                android:textColor="@color/white"
                android:textSize="19sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

